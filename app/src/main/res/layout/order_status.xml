<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8D4F1">

    <androidx.cardview.widget.CardView
        android:id="@+id/orders_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purple_700"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/order_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/image"
            tools:layout_editor_absoluteY="62dp" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/order_name"
        android:layout_width="209dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/orders_image"
        android:layout_alignTop="@+id/orders_image"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="10dp"
        android:text="TextView"
        android:textColor="#635A5A"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/orders_image"
        android:layout_alignTop="@+id/orders_image"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="3dp"
        android:paddingStart="10dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#635A5A"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/orders_image"
        android:layout_alignTop="@+id/orders_image"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="26dp"
        android:paddingStart="8dp"
        android:textColor="#635A5A"
        android:textColorHighlight="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/order_placed"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_below="@+id/orders_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_baseline_my_location_24" />

    <TextView
        android:id="@+id/order_placed_details"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/order_placed"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/order_placed"
        android:gravity="center"
        android:text="Order placed"
        android:textColor="#635A5A" />

    <View
        android:id="@+id/status_shipped"
        android:layout_width="3dp"
        android:layout_height="64dp"
        android:layout_below="@+id/order_placed"
        android:layout_alignStart="@+id/order_placed"
        android:layout_marginStart="18dp"
        android:layout_marginTop="-3dp"
        android:background="@color/purple_700" />

    <ImageView
        android:id="@+id/order_shipped"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_below="@+id/orders_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        app:srcCompat="@drawable/ic_baseline_location_searching_24" />

    <TextView
        android:id="@+id/order_shipped_details"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/order_shipped"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/order_shipped"
        android:gravity="center"
        android:text="Order Shipped"
        android:textColor="#635A5A" />

    <ImageView
        android:id="@+id/deliverd"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_below="@+id/orders_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="240dp"
        app:srcCompat="@drawable/ic_baseline_location_searching_24" />

    <TextView
        android:id="@+id/deleverd"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/deliverd"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/deliverd"
        android:gravity="center"
        android:text="Delivered"
        android:textColor="#635A5A" />

    <View
        android:id="@+id/status_delivered"
        android:layout_width="3dp"
        android:layout_height="64dp"
        android:layout_below="@+id/order_placed"
        android:layout_alignStart="@+id/order_placed"
        android:layout_marginStart="18dp"
        android:layout_marginTop="97dp"
        android:background="@color/purple_700" />

    <TextView
        android:id="@+id/details_"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleverd"
        android:layout_alignStart="@+id/deleverd"
        android:layout_marginStart="-45dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/textcolor"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFCFC"
        android:textSize="20dp" />

</RelativeLayout>