<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/item_list_style">

    <ImageView
        android:id="@+id/item_item_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        tools:layout_editor_absoluteY="62dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_item_name"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="10dp"
        android:text="TextView"
        android:textColor="#171717"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="18dp"
        android:background="#FFFFFF"
        android:paddingStart="10dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#1E1C1C"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/price"
        android:layout_alignTop="@+id/item_item_image"
        android:layout_alignEnd="@+id/price"
        android:layout_marginStart="159dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="-7dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_item_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="58dp"
        android:layout_toEndOf="@+id/item_item_image"
        android:textColor="#191818"
        android:textSize="18sp"
        android:visibility="invisible" />
</RelativeLayout>